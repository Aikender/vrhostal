@model IEnumerable<VRHostel.Models.MVCViewModels.CustomerViewModel.BookingViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Placed Bookings</h2>
<div class="well well-lg">

    @foreach (var Customer in Model)
    {

    <div class="well well-lg">
        <div class="row">
            <div class="col-lg-3">
                <div class="roomwell well-lg">
                    <label>First Name : </label><label>@Customer.FirstName</label><br />
                    <label>LastName  : </label> <label>@Customer.FirstName</label><br />
                    <label>CheckIn Date : </label><label>@Customer.CheckinDate</label><br />
                    <label>CheckOut Date  : </label> <label>@Customer.ChekoutDate</label><br />
                </div>
            </div>

            <div class="col-lg-3">
                <div class="roomwell well-lg">
                    <label>Room Number  : </label> <label>@Customer.Room.RoomNumber</label><br />
                    <label>Room Name : </label> <label>@Customer.Room.RoomName</label><br />
                    <label>Room Type : </label> <label>@Customer.Room.RoomType</label><br />

                </div>
            </div>
            <div class=" col-lg-3">
                <div class="roomwell well-lg">
                    <label>Bed Number : </label> <label>@Customer.Bed.BedNumber</label><br />
                    <label>Bed Type </label> <label>@Customer.Bed.BedType</label><br />
                    <label>Up or Top : </label> <label>@Customer.Bed.Bottem_top</label><br />
                </div>
            </div>
            <br />
            <div class="col-lg-3">
                <div class="roomwell well-lg">
                    <label>Price Per Night </label> <label>@Customer.Room.RoomPrice</label><br />
                    <label>Total Price </label> <label> @Customer.Totalprice</label><br />
                   
                </div>
            </div>
        </div>
    </div>
    }
 
    <div class=" well well-lg ">
        <div class="container ">
            <div class="text-center ">
                <h4> <label>Total Price :</label> <label></label></h4>
            </div>
        </div>
    </div>
</div>

