@model VRHostel.Models.MVCViewModels.RoomViewModel.RoomViewData
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create A Room</h2>

<div class="well well-lg">
    <form asp-action="InsertRoom" asp-controller="Rooms">
        <label>Room Name</label>:<input type="text" asp-for="RoomName" />
        <label>Room Type</label>:<input type="text" asp-for="RoomType" />
        <label>Room Number</label>:<input type="text" asp-for="RoomNumber" />
        <label>Room price</label>:<input type="text" asp-for="RoomPrice" />

        <button type="submit">Create Room</button>

    </form>
</div>